{% extends "base.html.twig" %}

{%block title %}
	Administration
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row">
			{% include "partials/adminnav.html.twig" %}
			<main class="col-9 border border-light p-2">
				<h1>Administration</h1>
				<h2>Les 5 derniers membres inscrits</h2>
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Id</th>
							<th>Nom</th>
							<th>Prénom</th>
							<th>Email</th>
							<th>Vérifié</th>
							<th>Date d'inscription</th>
                       <th>Action</th>
						</tr>
					</thead>
					<tbody>
						{% for user in users|slice(0, 5) %}
							<tr>
								<td>{{ user.id }}</td>
								<td>{{ user.lastname }}</td>
								<td>{{ user.firstname }}</td>
								<td>{{ user.email }}</td>
								<td>
									<div class="form-check form-switch">
										<input class="form-check-input" type="checkbox" role="switch" id="switch{{user.id}}" {{user.isVerified ? "checked" : ""}} disabled>
										<label class="form-check-label" for="switch{{user.id}}"></label>
									</div>
								</td>
								<td>{{ user.createdAt|date('d/m/Y') }}</td>
                                <td>
                                    <a href="#" class="btn btn-success">Modifier</a>
                                    </td>
                                    
							</tr>
						{% endfor %}

					</tbody>

				</main>
			</div>
		</div>


	{% endblock %}
