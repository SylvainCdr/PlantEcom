{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<section class="container">
		<div class="row">
			<div class="col">

{{ form_start(registrationForm) }}
				<h1>Inscription</h1>
				{{ form_errors(registrationForm) }}
				<fieldset class="mb-4">
					<legend>Mon identité</legend>
					{{ form_row(registrationForm.lastname) }}
					{{ form_row(registrationForm.firstname) }}
					{{ form_row(registrationForm.email) }}
				</fieldset>

				<fieldset class="mb-4">
					<legend>
						Mes coordonnées</legend>
					{{ form_row(registrationForm.address) }}
					{{ form_row(registrationForm.zipcode) }}
					{{ form_row(registrationForm.city) }}
				</fieldset>

				{{ form_row(registrationForm.plainPassword, {
    label: 'Mot de passe'
}) }}
{{ form_row(registrationForm.RGPDConsent) }}

<button type="submit" class="btn btn-primary btn-lg my-4">M'inscrire</button>
</button>
				<a href="{{path('app_login')}}" class="btn btn-secondary  mt-2">Se connecter</a>
			</button>


{{ form_end(registrationForm) }}
			</div>
		</div>
	</section>

{% endblock %}
